<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showPlotsButton"
        android:layout_width="200dp"
        android:layout_height="25pt"
        android:layout_marginTop="112dp"
        android:text="Plots"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/showPlantsButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40pt"
        android:text="Plants"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showPlotsButton"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/showPlansButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40pt"
        android:text="Plans"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showPlantsButton"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/closeAppButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40pt"
        android:text="Exit"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showPlansButton"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>